---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const pregnancy = await getCollection('pregnancy');
  const parenting = await getCollection('parenting');
  const toddler = await getCollection('toddler');
  const youth = await getCollection('youth');

  return [
    ...pregnancy.map(entry => ({ params: { stage: 'pregnancy', id: entry.slug }, props: { entry } })),
    ...parenting.map(entry => ({ params: { stage: 'parenting', id: entry.slug }, props: { entry } })),
    ...toddler.map(entry => ({ params: { stage: 'toddler', id: entry.slug }, props: { entry } })),
    ...youth.map(entry => ({ params: { stage: 'youth', id: entry.slug }, props: { entry } })),
  ];
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { stage } = Astro.params;
---

<Layout title={`${entry.data.title} | The Baby Plan`}>
  <main class="max-w-5xl mx-auto px-4 py-16">
    
    <nav class="mb-8 flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-slate-400">
      <a href="/roadmap" class="hover:text-slate-900">Roadmap</a>
      <span>/</span>
      <span class="text-slate-900">{stage}</span>
    </nav>

    <header class="mb-12">
      <h1 class="text-4xl md:text-6xl font-bold text-slate-900 mb-6">{entry.data.title}</h1>
      <p class="text-xl text-slate-500 max-w-2xl leading-relaxed">{entry.data.description}</p>
    </header>

    <div class="grid lg:grid-cols-3 gap-12">
      
      <div class="lg:col-span-2">
        <div class="prose prose-lg prose-slate max-w-none 
                    prose-headings:text-slate-900 prose-headings:font-bold
                    prose-strong:text-slate-900">
          <Content />
        </div>
      </div>

      <aside class="space-y-8">
        <div class="bg-slate-900 rounded-[40px] p-8 text-white shadow-xl">
          <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest block mb-4">Stage Essential</span>
          <h3 class="text-xl font-bold mb-2">{entry.data.kit}</h3>
          <p class="text-slate-400 text-sm mb-6 leading-relaxed">We've audited this specifically for the {stage} phase.</p>
          <a href={entry.data.kitLink} target="_blank" class="block w-full text-center bg-white text-slate-900 py-3 rounded-2xl font-bold hover:bg-slate-200 transition-all">
            Check Price â†’
          </a>
        </div>

        {entry.data.recommendedProducts && (
          <div class="bg-white border border-slate-100 rounded-[40px] p-8 shadow-sm">
            <h4 class="font-bold text-slate-900 mb-4">Supporting Gear</h4>
            <div class="space-y-6">
              {entry.data.recommendedProducts.map((product) => (
                <div class="border-b border-slate-50 pb-4 last:border-0">
                  <p class="font-bold text-slate-900 text-sm">{product.name}</p>
                  <p class="text-xs text-slate-500 mb-2">{product.price} at {product.retailer}</p>
                  <a href={product.link} target="_blank" class="text-xs font-bold text-slate-900 border-b border-slate-900">View Product</a>
                </div>
              ))}
            </div>
          </div>
        )}
      </aside>
    </div>
  </main>
</Layout>