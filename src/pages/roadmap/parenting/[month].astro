---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('parenting');
  return entries.map(entry => ({
    params: { month: entry.slug }, props: { entry },
  }));
}
const { entry } = Astro.props;
const { Content } = await entry.render();
---
<Layout title={entry.data.title}>
  <main class="max-w-4xl mx-auto px-4 py-20">
    <h1 class="text-4xl font-bold mb-8 text-slate-900">{entry.data.title}</h1>
    <div class="prose prose-lg"><Content /></div>
  </main>
</Layout>