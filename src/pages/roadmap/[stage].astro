---


import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  return [
    { params: { stage: 'pregnancy' } },
    { params: { stage: 'parenting' } },
    { params: { stage: 'toddler' } },
    { params: { stage: 'youth' } },
  ];
}

const { stage } = Astro.params;

// 1. Fetch the "Intro" content (the index.md file in the folder)
const entry = await getEntry(stage as any, 'index');

// 2. Fetch all milestones for the sidebar
const allMilestones = await getCollection(stage as any);
const sidebarItems = allMilestones
  .filter(item => item.slug !== 'index') // Hide the index itself from the sidebar list
  .sort((a, b) => a.slug.localeCompare(b.slug, undefined, { numeric: true }));

const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} | The Baby Plan`}>
  <div class="flex flex-col md:flex-row min-h-screen">
    
    <aside class="w-full md:w-80 bg-slate-50 border-r border-slate-100 p-8">
      <div class="sticky top-24">
        <nav class="mb-8 text-xs font-bold text-slate-400 uppercase tracking-widest">
           <a href="/roadmap" class="hover:text-slate-900">← All Roadmaps</a>
        </nav>
        <h2 class="text-2xl font-bold text-slate-900 mb-8 italic capitalize">{stage}</h2>
        <nav class="space-y-2">
          {sidebarItems.map((item) => (
            <a href={`/roadmap/${stage}/${item.slug}`} class="block p-4 rounded-2xl text-slate-500 hover:bg-white hover:text-slate-900 transition-all border border-transparent hover:border-slate-200">
              {item.data.title}
            </a>
          ))}
        </nav>
      </div>
    </aside>

    <main class="flex-1 p-8 md:p-20 bg-white">
      <div class="max-w-3xl">
        <header class="mb-12">
          <h1 class="text-5xl font-bold text-slate-900 mb-6">{entry.data.title}</h1>
          <p class="text-xl text-slate-500 italic leading-relaxed">{entry.data.description}</p>
        </header>

        <div class="prose prose-lg prose-slate max-w-none mb-16">
          <Content />
        </div>

        <div class="bg-slate-900 rounded-[40px] p-10 text-white flex flex-col md:flex-row items-center justify-between gap-8">
          <div>
            <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest block mb-2">Featured Stage Kit</span>
            <h3 class="text-2xl font-bold">{entry.data.kit}</h3>
          </div>
          <a href={entry.data.kitLink} target="_blank" class="bg-white text-slate-900 px-8 py-4 rounded-full font-bold whitespace-nowrap">
            View on Amazon →
          </a>
        </div>
      </div>
    </main>
  </div>
</Layout>