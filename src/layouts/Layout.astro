---
import '../styles/global.css';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-100 px-6 py-4">
			<div class="max-w-7xl mx-auto flex justify-between items-center">
				<a href="/" class="text-2xl font-bold italic tracking-tighter text-slate-900">thebabyplan.com</a>
				<div class="hidden md:flex gap-8 font-medium text-sm text-slate-700">
					<a href="/roadmap" class="hover:text-slate-900">Roadmaps</a>
					<a href="/shop" class="hover:text-slate-900">Shopping Lists</a>
					<a href="/blog" class="hover:text-slate-900">Blog</a>
				</div>
				<button class="bg-slate-900 text-white px-5 py-2 rounded-full text-sm font-bold hover:bg-slate-800 transition-colors">Free Audit</button>
			</div>
		</nav>

		<slot />

		<footer class="bg-slate-900 text-white py-20 px-6 mt-20">
			<div class="max-w-7xl mx-auto grid md:grid-cols-4 gap-12 text-sm">
				<div class="col-span-2">
					<h3 class="text-xl font-bold mb-4 italic">thebabyplan.com</h3>
					<p class="text-slate-400 max-w-sm">Planning the logistics of love since 2026.</p>
				</div>
				<div>
					<h4 class="font-bold mb-4 text-white">Guides</h4>
					<ul class="text-slate-400 space-y-2">
						<li><a href="/roadmap/pregnancy/week-1" class="hover:text-white">Pregnancy</a></li>
						<li><a href="/roadmap/parenting/month-1" class="hover:text-white">Newborn</a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-bold mb-4 text-white">Legal</h4>
					<ul class="text-slate-400 space-y-2">
						<li><a href="#" class="hover:text-white">Privacy</a></li>
						<li><a href="#" class="hover:text-white">Terms</a></li>
					</ul>
				</div>
			</div>
		</footer>
	</body>
</html>